
@{
  Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="~/css/auth.css">
  <title>Регистрация</title>
</head>
<body>
  <section>
    <div class="form-box">
      <div class="form-value">
        <form method="post" asp-controller="Main" asp-action="RegisterPost">
          <h2>Регистрация</h2>
          <div class="inputbox">
            <ion-icon name="mail-outline"></ion-icon>
            <input type="text" name="email" id="email1" placeholder="" required>
            <label for="email1">Логин</label>
          </div>
          <div class="inputbox">
            <ion-icon name="lock-closed-outline"></ion-icon>
            <input type="password" name="password" id="pass1" placeholder="" required>
            <label for="pass1">Пароль</label>
          </div>
          <div class="inputbox">
            <input name="name" id="name1" placeholder="" required/>
            <label for="name1">Имя аккаунта</label>
          </div>
          <div class="inputbox">
            <input name="company_name" id="name2" placeholder=""/>
            <label for="name2">Компания</label>
          </div>
          <button>Отправить</button>
        </form>
      </div>
    </div>
  </section>
  <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
  <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
</body>

</html>